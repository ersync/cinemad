<div class="flex items-center space-x-2 md:space-x-4 lg:space-x-8">
  <button class="hidden lg:flex px-4 py-1.5 rounded-full border border-white/20 text-sm hover:bg-white hover:text-[#032541] transition-all duration-200">
    EN
  </button>

  <% if user_signed_in? %>
    <button class="relative w-9 h-9 flex items-center justify-center rounded-full hover:bg-white/10 transition-all duration-200">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
      </svg>
    </button>

    <%= render 'shared/user_section' %>
  <% else %>
    <a href="<%= new_user_session_path %>" class="px-4 py-2 text-sm hover:text-white transition-colors duration-200">
      Login
    </a>
    <a href="<%= new_user_registration_path %>" class="px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 text-sm transition-all duration-200 hover:scale-105">
      Join
    </a>
  <% end %>

  <button
    onclick="window.dispatchEvent(new CustomEvent('toggleGlobalSearch'))"
    class="w-9 h-9 flex items-center justify-center rounded-full hover:bg-white/10 transition-all duration-200">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
  </button>
</div>