<div id="mobile-menu" class="fixed inset-y-0 left-0 w-[280px] bg-gradient-to-b from-[#032541] via-[#034275] to-[#032541] transform -translate-x-full transition-transform duration-300 ease-in-out sm:hidden z-[60] shadow-xl">
  <div class="p-4 border-b border-white/10 bg-gradient-to-r from-[#032541] via-[#034275] to-[#032541]">
    <% if user_signed_in? %>
      <%= button_to destroy_user_session_path(redirect_to: request.fullpath),
        method: :delete,
        class: "w-full px-5 py-2.5 rounded-full bg-white/15 text-white font-medium text-sm hover:bg-white/20 active:bg-white/25 transition-all duration-200 shadow-lg flex items-center justify-center gap-2" do %>
        <svg class="w-4 h-4 -scale-x-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        Logout
      <% end %>
    <% else %>
      <div class="flex items-center space-x-3">
        <a href="<%= new_user_session_path %>" class="flex-1 px-5 py-2.5 text-center rounded-full bg-white/15 text-white font-medium text-sm hover:bg-white/20 active:bg-white/25 transition-all duration-200 shadow-lg flex items-center justify-center gap-2">
          <svg class="w-4 h-4 -scale-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
          </svg>
          Login
        </a>
        <a href="<%= new_user_registration_path %>" class="flex-1 px-5 py-2.5 text-center rounded-full bg-[#124062]   text-white font-medium text-sm hover:from-[#043d6f] hover:to-[#021c2d] active:from-[#053a69] active:to-[#021824] transition-all duration-200 shadow-lg flex items-center justify-center gap-2 border border-white/10">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          Join
        </a>
      </div>
    <% end %>
  </div>

  <div class="h-[calc(100%-8rem)] overflow-y-auto bg-gradient-to-b from-[#032541]/50 to-transparent">
    <nav class="py-2">
      <%= render 'shared/header/mobile_menu_items' %>
    </nav>
  </div>

  <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-white/10 bg-gradient-to-r from-[#032541] via-[#034275] to-[#032541]">
    <button class="w-full px-5 py-2.5 rounded-full bg-white/15 text-white font-medium text-sm hover:bg-white/20 active:bg-white/25 transition-all duration-200 shadow-lg flex items-center justify-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
      </svg>
      EN
    </button>
  </div>
</div>