<div class="flex flex-col relative my-7.5 " style="height: <%= defined?(height) && height ? "#{height}" : "" %>">
  <div class="flex gap-5 items-center">
    <h2 class="font-SourceProSemiBold text-[1.5rem] "><%= title %></h2>
    <div class="trending-selector flex font-SourceProSemiBold rounded-full border border-tmdbDarkBlue/80 max-w-min overflow-hidden text-tmdbDarkBlue">
      <% periods.each_with_index do |period, index| %>
        <span class="<%= index.zero? ? "active_tab" : '' %> block py-0.5 px-5 rounded-full overflow-hidden transition-all duration-200"><a class="block w-full min-w-max"><%= period %> </a></span>
      <% end %>
    </div>
  </div>

  <div class="scrollable-wrapper fading <%= defined?(show_scrollbar) && show_scrollbar ? "scrollbar" : "" %> overflow-scroll" style="<%= defined?(background_bar) && background_bar ? "background: url('https://iili.io/J1lXhX9.png') -10px 130px / contain no-repeat;" : "" %>">
    <div class="scrollable-content flex gap-5 my-5">
      <% movies.shuffle.each do |movie| %>
        <div class="w-[150px] shrink-0">
          <div class="relative">
            <div class="absolute right-1.5 top-1.5 opacity-50">
              <svg class="w-[26px] h-[26px]">
                <use xlink:href="#circle-more"></use>
              </svg>
            </div>
            <div class="overflow-hidden rounded-lg"><%= link_to image_tag(movie.cover), movie, class: "h-[225px]" %></div>
            <%= render partial: 'movies/rating_chart', locals: { chart_size: 'small-chart', movie: movie } %>
          </div>
          <div class="pl-2.5 mt-6">
            <h3 class="font-SourceProBold leading-4 line-clamp-2"><%= link_to movie.title, movie %></h3>
            <span class="text-black/60 text-[0.9rem]"><%= movie.release_date.strftime("%b %d, %Y") %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
