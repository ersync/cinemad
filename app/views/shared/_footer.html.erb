<footer class="relative text-white/90 font-SourceProSemiBold border-t border-white/5">
<div class="absolute inset-0 z-0">
  <div class="absolute inset-0 bg-gradient-to-r from-[#01121f] via-[#012645] to-[#01121f]"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#01121f]/50 to-[#01121f]/80"></div>
  </div>

  <div class="relative z-10 container max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-wrap justify-center items-start gap-y-8">
      <div class="flex gap-3 sm:gap-8">
        <div class="w-[160px] sm:w-[180px]">
          <div class="w-40">
            <%= render 'shared/logo' %>
          </div>

          <% if user_signed_in? %>
            <div class="mt-4 px-4 py-2.5 bg-white/5 rounded-xl backdrop-blur-sm border border-white/5">
              <span class="block text-[13px] text-white/70">Welcome back</span>
              <span class="block text-sm font-medium text-white"><%= current_user.username %> ✧</span>
            </div>
          <% else %>
            <a href="<%= new_user_registration_path %>" class="inline-block px-4 py-2 mt-4 bg-white/10 rounded-full text-sm md:text-base hover:bg-white/20 transition-all duration-200">
              Join the Community
            </a>
          <% end %>
        </div>

        <div class="space-y-4 w-[160px] sm:w-[180px]">
          <div class="flex flex-col">
            <h3 class="text-white font-bold text-xl mx-auto mb-2">THE BASICS</h3>
            <ul class="space-y-2 mx-auto">
              <li><a href="/guidelines" class="text-sm sm:text-base hover:text-white transition-colors duration-200">About CinEmad</a></li>
              <li><a href="/discussions" class="text-sm sm:text-base hover:text-white transition-colors duration-200">Contact Us</a></li>
              <li><a href="/leaderboard" class="text-sm sm:text-base hover:text-white transition-colors duration-200">System Status</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="flex gap-3 sm:gap-8">
        <div class="space-y-4 w-[160px] sm:w-[180px]">
          <div class="flex flex-col">
            <h3 class="text-white font-bold text-xl mx-auto mb-2">GET INVOLVED</h3>
            <ul class="space-y-2 mx-auto">
              <li><a href="/guidelines" class="text-sm sm:text-base hover:text-white transition-colors duration-200">Contribution</a></li>
              <li><a href="/discussions" class="text-sm sm:text-base hover:text-white transition-colors duration-200">Add New Movies</a></li>
              <li><a href="/leaderboard" class="text-sm sm:text-base hover:text-white transition-colors duration-200">Add New TV Show</a></li>
            </ul>
          </div>
        </div>

        <div class="space-y-4 w-[160px] sm:w-[180px]">
          <div class="flex flex-col">
            <h3 class="text-white font-bold text-xl mx-auto mb-2">COMMUNITY</h3>
            <ul class="space-y-2 mx-auto">
              <li><a href="/guidelines" class="text-sm sm:text-base hover:text-white transition-colors duration-200">Guidelines</a></li>
              <li><a href="/discussions" class="text-sm sm:text-base hover:text-white transition-colors duration-200">Discussions</a></li>
              <li><a href="/leaderboard" class="text-sm sm:text-base hover:text-white transition-colors duration-200">Leaderboard</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class="relative z-10 border-t border-white/5">
    <div class="container max-w-3xl mx-auto px-6 py-4">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-sm">
          © <%= Time.current.year %> CinEmad. All rights reserved.
        </div>

        <div class="flex flex-wrap justify-center md:justify-end gap-4 text-sm">
          <a href="/terms" class="hover:text-white transition-colors duration-200">Terms of Use</a>
          <a href="/privacy" class="hover:text-white transition-colors duration-200">Privacy Policy</a>
          <a href="/cookie" class="hover:text-white transition-colors duration-200">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>