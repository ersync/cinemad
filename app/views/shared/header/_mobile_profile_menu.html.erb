<div id="profile-menu-overlay" class="fixed inset-0 bg-gradient-to-b from-black/70 to-black/50 backdrop-blur-md opacity-0 pointer-events-none transition-opacity duration-300 z-50"></div>

<div id="mobile-profile-menu" class="fixed bottom-0 left-0 right-0 bg-gradient-to-br from-[#011e36] to-[#01162a] border-t border-blue-400/30 rounded-t-3xl shadow-2xl transform translate-y-full transition-all duration-300 ease-out z-50">
  <!-- Drag indicator -->
  <div class="flex justify-center pt-3 pb-1">
	<div class="w-12 h-1.5 bg-blue-300/30 rounded-full"></div>
  </div>
  
  <div class="p-5">
	<div class="flex items-center justify-between mb-5">
	  <h3 class="text-xl font-bold text-white tracking-tight">Account</h3>
	  <button onclick="toggleProfileMenu()" class="text-blue-200 hover:text-white p-2 rounded-full hover:bg-blue-800/40 transition-all duration-200">
		<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
		  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
		</svg>
	  </button>
	</div>
	
	<div class="space-y-3.5">
	  <% if user_signed_in? %>
		<a href="/users/<%= current_user.username %>" class="flex items-center p-4 rounded-xl bg-blue-900/20 hover:bg-blue-800/40 active:scale-[0.98] transition-all duration-200">
		  <div class="bg-blue-500/20 p-2.5 rounded-lg mr-4">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
			</svg>
		  </div>
		  <div>
			<span class="text-white font-medium">View Profile</span>
			<p class="text-blue-200/70 text-sm mt-0.5">See your public profile</p>
		  </div>
		</a>
	  <% end %>
	  
	  <% if user_signed_in? %>
		<a href="/users/<%= current_user.username %>/edit" class="flex items-center p-4 rounded-xl bg-blue-900/20 hover:bg-blue-800/40 active:scale-[0.98] transition-all duration-200">
		  <div class="bg-blue-500/20 p-2.5 rounded-lg mr-4">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
			  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
			</svg>
		  </div>
		  <div>
			<span class="text-white font-medium">Edit Profile</span>
			<p class="text-blue-200/70 text-sm mt-0.5">Customize your account</p>
		  </div>
		</a>
	  <% end %>
	  
	  <% if user_signed_in? %>
		<%= button_tag type: "button",
		  class: "w-full flex items-center p-4 rounded-xl bg-red-900/30 hover:bg-red-900/50 active:scale-[0.98] transition-all duration-200",
		  onclick: "window.dispatchEvent(new CustomEvent('app:logout'))" do %>
		  <div class="bg-red-500/20 p-2.5 rounded-lg mr-4">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
			</svg>
		  </div>
		  <div>
			<p class="text-left text-white font-medium">Sign Out</span>
			<p class="text-red-200/70 text-sm mt-0.5">Log out from your account</p>
		  </div>
		<% end %>
	  <% end %>
	</div>
	
	<div class="mt-8 pt-4 border-t border-blue-500/10 text-center">
		<% package_json = JSON.parse(File.read(Rails.root.join('package.json'))) %>
		<p class="text-blue-200/50 text-sm">App Version <%= package_json['version'] %></p>
	</div>
  </div>
</div>