<div id="profile-menu-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300 z-50"></div>

<div id="mobile-profile-menu" class="fixed bottom-0 left-0 right-0 bg-[#011a30] border-t border-blue-500/20 rounded-t-2xl shadow-xl transform translate-y-full transition-transform duration-300 ease-in-out z-50">
  <div class="p-4">
	<div class="flex items-center justify-between mb-4">
	  <h3 class="text-lg font-semibold text-white">Account</h3>
	  <button onclick="toggleProfileMenu()" class="text-blue-300 hover:text-blue-100 transition-colors">
		<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
		  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
		</svg>
	  </button>
	</div>
	
	<div class="space-y-3">
	  <% if user_signed_in? %>
		<a href="/users/<%= current_user.username %>" class="flex items-center p-3 rounded-lg bg-blue-900/30 hover:bg-blue-900/50 transition-colors">
		  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-300 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
		  </svg>
		  <span class="text-white">View Profile</span>
		</a>
	  <% end %>
	  
	  <% if user_signed_in? %>
		<a href="/users/<%= current_user.username %>/edit" class="flex items-center p-3 rounded-lg bg-blue-900/30 hover:bg-blue-900/50 transition-colors">
		  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-300 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
		  </svg>
		  <span class="text-white">Edit Profile</span>
		</a>
	  <% end %>
	  
	  <% if user_signed_in? %>
		<%= button_tag type: "button",
		  class: "w-full flex items-center p-3 rounded-lg bg-red-900/30 hover:bg-red-900/50 transition-colors",
		  onclick: "window.dispatchEvent(new CustomEvent('app:logout'))" do %>
		  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-300 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
		  </svg>
		  <span class="text-white">Sign Out</span>
		<% end %>
	  <% end %>
	</div>
  </div>
</div>