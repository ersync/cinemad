<div class="w-[85%] max-w-[1120px] sm:w-[75%] h-[664px] shadow-medium mx-auto flex flex-col md:flex-row justify-center items-center my-10 sm:my-14 rounded-lg overflow-hidden antialiased">
  <div class="hidden lg:block relative lg:w-1/2 h-1/3 lg:h-full">
    <div class="absolute inset-0" style="background-image: linear-gradient(30deg, rgba(3, 31, 47, 0.9) 0%, rgba(3, 37, 80, 0.6) 31% )"></div>
    <%= image_tag "/signup-banner.jpg", class: "w-full h-full object-cover", alt: "Sign up banner" %>
  </div>
  <div class="flex flex-col justify-center gap-y-4 items-center w-full lg:w-1/2 p-4 sm:p-8 overflow-y-scroll">
    <div class="w-36">
      <img src="https://www.themoviedb.org/assets/2/v4/logos/v2/blue_square_2-d537fb228cf3ded904ef09b136fe3fec72548ebc1fea3fbbd1ad9e36364db38b.svg" alt="">
    </div><%= form_with(model: resource, scope: resource_name, url: (signup ? registration_path(resource_name) : session_path(resource_name)), method: "post", html: { class: "w-[95%] max-w-[400px] mx-auto text-black font-SourceProNormal" }) do |form| %>
      <% if signup %>
        <div class="mb-4">
          <%= form.label :username, class: "block mb-2 text-sm font-medium" %>
          <%= form.text_field :username, class: "bg-gray-50 border border-gray-100 text-sm rounded-lg block w-full p-1.5 sm:p-2.5 outline-none focus:border-gray-300", required: true %>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :email, class: "block mb-2 text-sm font-medium" %>
        <%= form.email_field :email, value: "johndoe@example.com", class: "bg-gray-50 border border-gray-100 text-sm rounded-lg block w-full p-1.5 sm:p-2.5 outline-none focus:border-gray-300", required: true %>
      </div>
      <div class="mb-4">
        <%= form.label :password, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.password_field :password, value:"johndoe@example.com", class: "bg-gray-50 border border-gray-100 text-sm rounded-lg block w-full p-1.5 sm:p-2.5 outline-none focus:border-gray-300", required: true %>
      </div>
      <% if signup %>
        <div class="mb-4">
          <%= form.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= form.password_field :password_confirmation, class: "bg-gray-50 border border-gray-100 text-sm rounded-lg block w-full p-1.5 sm:p-2.5 outline-none focus:border-gray-300", required: true %>
        </div>
        <div class="flex items-start mb-5">
          <div class="flex items-center h-5">
            <%= form.check_box :terms, { class: "peer w-4 h-4 accent-[#50509B] border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300", required: true } %>
            <%= form.label :terms, class: "ms-2 text-sm font-medium text-gray-500  peer-checked:text-gray-900 select-none" do %>
              I have read and agree to the terms of service
            <% end %>
          </div>
        </div>
      <% end %>
      <%= form.submit signup ? "Sign up" : "Sign in", class: "text-white bg-tmdbDarkBlue brightness-150 font-SourceProSemiBold hover:bg-black focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-md leading-5 w-full px-5 py-2.5 text-center transition-all cursor-pointer" %>
      <%= link_to signup ? "Sign up with Google" : "Sign in with Google", class: "block text-black/90 bg-gray-100 hover:bg-gray-200 transition-all font-SourceProNormal focus:ring-4 focus:outline-none text-base rounded-lg leading-4 w-full mt-3 px-5 py-1 text-center transition-all cursor-pointer" do %>
        <svg class="w-8 h-8 inline-block">
          <use xlink:href="#google"></use>
        </svg>
        <span><%= signup ? "Sign up" : "Sign in" %> with Google</span>
      <% end %>
    <% end %>

  </div>
</div>
