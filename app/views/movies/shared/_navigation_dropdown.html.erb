<li class="relative group cursor-pointer text-center">
  <div class="flex items-center gap-1">
    <%= link_to title, '#' %>
    <svg class="inline-block w-3 h-3">
      <use xlink:href="#dropdown"></use>
    </svg>
  </div>
  <ul class="absolute invisible z-40 w-44 py-2 text-left bg-white border border-tmdbLightGray rounded opacity-0 group-hover:visible group-hover:opacity-100 transition-all delay-75 duration-200 font-SourceProNormal child:block child:py-[3px] child:pl-6 child-hover:bg-tmdbHoverGray <%= right_align ? 'right-0' : '' %>">
    <% items.each do |item| %>
      <%= link_to item[:text], item[:link] %>
    <% end %>
  </ul>
</li>