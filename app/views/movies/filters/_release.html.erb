<div class="filter-section">
  <h2 class="font-SourceProLight">Release</h2>

  <%= checkbox_group(f, :release_formats, release_format_options) %>

  <div class="flex flex-col space-y-1 mt-2">
    <div class="flex justify-between items-center">
      <label for="from" class="block text-[0.9rem] font-medium text-gray-400 pt-1">from</label>
      <div class="mt-1 relative w-[70%]">
        <%= date_field_tag :date_from, nil, class: "block w-full border border-gray-300 rounded-md text-xs text-gray-500 focus:ring-indigo-500 focus:border-indigo-500 py-1.5 px-3" %>
      </div>
    </div>

    <div class="flex justify-between items-center">
      <label for="to" class="block text-[0.9rem] font-medium text-gray-400 pt-1">to</label>
      <div class="mt-1 relative w-[70%]">
        <%= date_field_tag :date_to, Date.today, class: "block w-full border border-gray-300 rounded-md text-xs text-gray-500 focus:ring-indigo-500 focus:border-indigo-500 py-1.5 px-3" %>
      </div>
    </div>
  </div>
</div>
