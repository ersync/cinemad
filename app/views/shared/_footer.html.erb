<footer class="relative text-white/90 font-SourceProSemiBold border-t border-white/5">
  <!-- Enhanced gradient background with more depth -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-[#010e19] via-[#011a30] to-[#010e19]"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#011528]/50 to-[#010e19]/90"></div>
    <!-- Subtle accent elements -->
    <div class="absolute top-0 left-1/4 w-64 h-64 rounded-full bg-blue-500/5 blur-3xl opacity-60"></div>
    <div class="absolute bottom-0 right-1/3 w-72 h-72 rounded-full bg-indigo-500/5 blur-3xl opacity-50"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4 sm:px-6 py-6 sm:pt-10 sm:pb-4">
    <div class="flex justify-center">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-x-10 gap-y-6 sm:gap-x-5 lg:gap-x-8 w-full max-w-xs sm:max-w-md lg:max-w-4xl justify-center">
        <!-- First column - Logo and join button -->
        <div class="flex justify-center items-center">
          <div class="">
            <!-- Logo with subtle glow -->
            <div class="w-28 sm:w-40 relative">
              <%= render 'shared/logo' %>
              <div class="absolute -inset-1 bg-blue-500/10 blur-xl rounded-full -z-10"></div>
            </div>
          
            <!-- User welcome or join button -->
            <% if user_signed_in? %>
              <div class="mt-3 px-3 py-2 bg-white/5 rounded-xl backdrop-blur-sm border border-white/5 w-full">
                <span class="block text-xs text-white/70">Welcome back</span>
                <span class="block text-sm font-medium text-white"><%= current_user.username %> ✧</span>
              </div>
            <% else %>
              <a href="<%= new_user_registration_path %>" class="inline-block px-3 py-1.5 mt-3 bg-gradient-to-r from-blue-600/80 to-indigo-600/80 rounded-full text-xs sm:text-sm hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-200">
                Join Community
              </a>
            <% end %>
          </div>

        </div>
        <!-- The Basics column -->
        <div class="flex justify-center items-center">
          <div class="">
            <h3 class="text-white font-bold text-sm sm:text-xl mb-1.5 sm:mb-2">THE BASICS</h3>
            <ul class="space-y-1 sm:space-y-2">
              <li><a href="/guidelines" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">About CinEmad</a></li>
              <li><a href="/discussions" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">Contact Us</a></li>
              <li><a href="/leaderboard" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">System Status</a></li>
            </ul>
          </div>
        </div>

        <!-- Get Involved column -->
        <div class="flex justify-center items-center">
          <div class="">
            <h3 class="text-white font-bold text-sm sm:text-xl mb-1.5 sm:mb-2">GET INVOLVED</h3>
            <ul class="space-y-1 sm:space-y-2">
              <li><a href="/guidelines" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">Contribution</a></li>
              <li><a href="/discussions" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">Add New Movies</a></li>
              <li><a href="/leaderboard" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">Add New TV Show</a></li>
            </ul>
          </div>
        </div>

        <!-- Community column -->
        <div class="flex justify-center items-center">
          <div class="">
            <h3 class="text-white font-bold text-sm sm:text-xl mb-1.5 sm:mb-2">COMMUNITY</h3>
              <ul class="space-y-1 sm:space-y-2">
                <li><a href="/guidelines" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">Guidelines</a></li>
                <li><a href="/discussions" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">Discussions</a></li>
                <li><a href="/leaderboard" class="text-xs sm:text-sm hover:text-white transition-colors duration-200">Leaderboard</a></li>
              </ul>
            </div>
          </div>
      </div>
    </div>

