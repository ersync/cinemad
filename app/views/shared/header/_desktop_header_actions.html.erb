<div class="relative group">
  <button class="flex items-center space-x-1.5">
    <div class="relative">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, class: "w-8 h-8 rounded-full object-cover ring-2 ring-blue-400/30 transition-all duration-300 group-hover:ring-blue-400/60" %>
      <% else %>
        <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white font-medium text-sm shadow-lg ring-2 ring-blue-400/30 transition-all duration-300 group-hover:ring-blue-400/60">
          <%= current_user.username[0].upcase %>
        </div>
      <% end %>
      <div class="absolute bottom-0 right-0 w-2 h-2 bg-emerald-500 rounded-full ring-1 ring-[#011528]"></div>
    </div>
    <span class="hidden lg:block text-sm font-medium"><%= current_user.username %></span>
    <svg class="w-4 h-4 text-white/60 group-hover:text-white/90 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  
  <div class="absolute right-0 top-full mt-1 w-56 rounded-lg bg-[#011528]/95 backdrop-blur-md shadow-xl border border-white/10 py-1.5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-right group-hover:scale-100 scale-95 z-50">
    <div class="px-4 py-2 border-b border-white/5">
      <p class="text-sm font-medium text-white"><%= current_user.username %></p>
      <p class="text-xs text-blue-300/70 truncate"><%= current_user.email %></p>
    </div>
    
    <a href="/users/<%= current_user.username %>" class="flex items-center px-4 py-2 text-sm text-blue-300 hover:bg-white/10">
      <svg class="w-4 h-4 mr-3 text-blue-400/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      View Profile
    </a>
    <a href="/users/<%= current_user.username %>/edit" class="flex items-center px-4 py-2 text-sm text-blue-300 hover:bg-white/10">
      <svg class="w-4 h-4 mr-3 text-blue-400/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      Edit Profile
    </a>
    <a href="/watchlist" class="flex items-center px-4 py-2 text-sm text-blue-300 hover:bg-white/10">
      <svg class="w-4 h-4 mr-3 text-blue-400/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
      </svg>
      Watchlist
    </a>
    
    <div class="my-1 border-t border-white/5"></div>
    
    <%= button_tag type: "button",
      class: "w-full text-left flex items-center px-4 py-2 text-sm text-red-400 hover:bg-white/10",
      onclick: "window.dispatchEvent(new CustomEvent('app:logout'))" do %>
      <svg class="w-4 h-4 mr-3 text-red-400/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
      Sign Out
    <% end %>
  </div>
</div>