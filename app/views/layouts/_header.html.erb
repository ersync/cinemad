<div class="fixed w-full z-50 antialiased">
  <!--desktop header-->
  <header class="hidden sm:flex items-center w-full h-16 bg-tmdbDarkBlue font-SourceProSemiBold text-white">
    <div class="container">
      <div class="flex justify-between items-center min-h-10 mx-auto">
        <nav class="flex leading-10">
          <%= link_to root_path, class: "inline-block w-[154px] h-10 mr-4 md:mr-6 select-none" do %>
            <img class="h-5 inline-block" src="https://www.themoviedb.org/assets/2/v4/logos/v2/blue_short-8e7b30f73a4020692ccca9c88bafe5dcb6f8a62a4c6bc55cd9ba82bb2cd95f6c.svg" alt="">
          <% end %>
          <ul class="flex gap-4 md:gap-5 lg:gap-8 h-10">
            <li class="relative group cursor-pointer">
              <%= link_to "Movies", root_path %>
              <div class="invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-75 delay-75 duration-200 absolute py-2 w-44 bg-white text-black rounded font-SourceProNormal top-full child-hover:bg-tmdbHoverGray child:block child:pl-6">
                <%= link_to "Popular", movies_url %>
                <a href="#">Now Playing</a>
                <a href="#">Upcoming</a>
                <a href="#">Top Rated</a>
              </div>
            </li>
            <li class="relative group cursor-pointer"><a href="#">TV Shows</a>
              <div class="invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-75 delay-75 duration-200 absolute py-2 w-44 bg-white text-black rounded font-SourceProNormal top-full child-hover:bg-tmdbHoverGray child:block child:pl-6">
                <a href="#">Popular</a>
                <a href="#">Airing Today</a>
                <a href="#">On TV</a>
                <a href="#">Top Rated</a>
              </div>
            </li>
            <li class="relative group cursor-pointer"><a href="#">People</a>
              <div class="invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-75 delay-75 duration-200 absolute py-2 w-44 bg-white text-black rounded font-SourceProNormal top-full child-hover:bg-tmdbHoverGray child:block child:pl-6">
                <a href="#">Popular People</a>
              </div>
            </li>
            <li class="relative group cursor-pointer"><a href="#">More</a>
              <div class="invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-75 delay-75 duration-200 absolute py-2 w-44 bg-white text-black rounded font-SourceProNormal top-full child-hover:bg-tmdbHoverGray child:block child:pl-6">
                <a href="#">Discussions</a>
                <a href="#">Leaderboard</a>
                <a href="#">Support</a>
                <a href="#">API</a>
              </div>
            </li>
          </ul>
        </nav>
        <div>
          <ul class="flex gap-4 md:gap-6 lg:gap-[30px] h-10 leading-10">
            <li class="hidden md:flex justify-center items-center cursor-pointer">
              <svg class="w-5 pt-1.5">
                <use xlink:href="#plus"></use>
              </svg>
            </li>
            <li class="hidden md:block">
              <a class="text-[0.9rem] px-[5px] py-[3px] border-white border rounded-[3px] transition-all duration-100 hover:bg-white hover:text-tmdbDarkBlue" href="">EN</a>
            </li>
            <% if user_signed_in? %>
              <li class="flex justify-center items-center cursor-pointer">
                <svg class="w-6 h-6">
                  <use xlink:href="#bell"></use>
                </svg>
              </li>
              <li class="relative group flex justify-center items-center h-full">
                <a href="">
                  <span class="block w-8 h-8 rounded-full bg-red-500 text-sm text-center leading-[32px]">
                    <%= current_user.username[0].capitalize %>
                  </span>
                </a>
                <div class="invisible opacity-0 group-hover:visible group-hover:opacity-100 transition-all duration-200 delay-75 leading-normal absolute font-SourceProSemiBold text-black top-full w-[178px] overflow-hidden rounded-[3px] shadow-light bg-white child:px-5 child:py-1.5 child:leading-6 child-hover:bg-[#f4f4f4] child:transition-all child:text-black/60 child:text-[0.9rem] child:block">
                  <%= link_to user_profile_path(current_user), class: "!py-3 border-b border-tmdbLightGray hover:!bg-white" do %>
                    <p class="text-black leading-5 text-base font-SourceProSemiBold"><%= current_user.username %> </p>
                    <span class="!text-black/50 text-[0.8rem]">View profile</span>
                  <% end %>
                  <%= link_to "Discussions", new_user_session_path %>
                  <%= link_to "Lists", new_user_session_path %>
                  <%= link_to "Ratings", ratings_user_path(current_user) %>
                  <%= link_to "Watchlist", watchlist_user_path(current_user), class: "border-b !pb-2 border-tmdbLightGray" %>
                  <%= link_to "Edit Profile", edit_user_path(current_user) %>
                  <a class="border-b border-tmdbLightGray" href="">Settings</a>
                  <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "leading-7 w-full h-full text-left" %>
                </div>
              </li>
            <% else %>
              <li><%= link_to "Login", new_user_session_path %></li>
              <li><%= link_to "Join <span class='hidden lg:inline-block'>TMDB</span>".html_safe, new_user_registration_path %></li>

            <% end %>
            <li class="flex justify-center items-center cursor-pointer">
              <svg class="w-[30px] h-[30px]">
                <use xlink:href="#search"></use>
              </svg>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </header>
  <!--mobile header-->
  <div id="mobile-menu-container"></div>
  <div class="overlay sm:hidden top-16"></div>
</div>